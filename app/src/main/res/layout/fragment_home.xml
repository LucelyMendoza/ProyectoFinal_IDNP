<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.login.fragments.HomeFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Hola!"
            android:textSize="16sp"
            android:textColor="@color/secondary"
            style="@style/SubtitleText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visiten el centro cultural de UNSA"
            style="@style/TitleText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="San Agustín 106 - Arequipa"
            style="@style/SubtitleText"
            android:drawableStart="@drawable/location_icon"
            android:drawableTint="@color/primary"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Más popular"
            style="@style/ItemTitleText"
            android:layout_marginTop="16dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/popular"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            style="@style/RoundedImage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artista 1"
            style="@style/ItemTitleText"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/artista1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"
                style="@style/RoundedImage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" @ridzjcob"
                style="@style/ItemSubtitleText"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Galerías"
            style="@style/ItemTitleText"
            android:layout_marginTop="16dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Gallery Item 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageViewGaleria1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/galeria1"
                    android:scaleType="centerCrop"
                    style="@style/RoundedImage"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galería I"
                    style="@style/ItemTitleText"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primer patio"
                    style="@style/ItemSubtitleText"
                    android:drawableStart="@drawable/location_icon"/>
            </LinearLayout>

            <!-- Gallery Item 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageViewGaleria2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/galeria2"
                    android:scaleType="centerCrop"
                    style="@style/RoundedImage"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galería II"
                    style="@style/ItemTitleText"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primer patio"
                    style="@style/ItemSubtitleText"
                    android:drawableStart="@drawable/location_icon"/>
            </LinearLayout>

            <!-- Gallery Item 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageViewGaleria3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/galeria3"
                    android:scaleType="centerCrop"
                    style="@style/RoundedImage"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galería III"
                    style="@style/ItemTitleText"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primer patio"
                    style="@style/ItemSubtitleText"
                    android:drawableStart="@drawable/location_icon"/>
            </LinearLayout>

            <!-- Gallery Item 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageViewGaleria4"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/galeria4"
                    android:scaleType="centerCrop"
                    style="@style/RoundedImage"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galería IV"
                    style="@style/ItemTitleText"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primer patio"
                    style="@style/ItemSubtitleText"
                    android:drawableStart="@drawable/location_icon"/>
            </LinearLayout>

            <!-- Gallery Item 5 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageViewGaleria5"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/galeria5"
                    android:scaleType="centerCrop"
                    style="@style/RoundedImage"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galería V"
                    style="@style/ItemTitleText"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pasadillo II"
                    style="@style/ItemSubtitleText"
                    android:drawableStart="@drawable/location_icon"/>
            </LinearLayout>

            <!-- Gallery Item 6 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageViewGaleria6"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/galeria6"
                    android:scaleType="centerCrop"
                    style="@style/RoundedImage"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galería VI"
                    style="@style/ItemTitleText"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Segundo patio"
                    style="@style/ItemSubtitleText"
                    android:drawableStart="@drawable/location_icon"/>
            </LinearLayout>

            <!-- Last Gallery Item centered -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageViewGaleria7"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/galeria7"
                    android:scaleType="centerCrop"
                    style="@style/RoundedImage"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galería VII"
                    style="@style/ItemTitleText"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tercer patio"
                    style="@style/ItemSubtitleText"
                    android:drawableStart="@drawable/location_icon"/>
            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>